{
    "name": "doublethreedigital/social-shots",
    "description": "Generate social images dynamically, from your Statamic entries.",
    "license": "proprietary",
    "autoload": {
        "psr-4": {
            "DoubleThreeDigital\\SocialShots\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DoubleThreeDigital\\SocialShots\\Tests\\": "tests"
        }
    },
    "extra": {
        "statamic": {
            "name": "Social Shots",
            "description": "Generate social images dynamically, from your Statamic entries."
        },
        "laravel": {
            "providers": [
                "DoubleThreeDigital\\SocialShots\\ServiceProvider"
            ]
        }
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "spatie/browsershot": "^3.44",
        "statamic/cms": "3.0.* || 3.1.*"
    },
    "require-dev": {
        "nunomaduro/collision": "^4.2",
        "orchestra/testbench": "^4.0|^5.0|^6.0"
    },
    "scripts": {
        "lint": [
            "php-cs-fixer fix ./src"
        ],
        "test": [
            "php -d memory_limit=-1 -d max_execution_time=0 ./vendor/bin/phpunit"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
